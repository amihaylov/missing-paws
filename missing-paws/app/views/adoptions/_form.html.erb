<%= form_for @adoption, html: {multipart: true } do |f| %>

<% if @adoption.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(@adoption.errors.count, "error") %> prohibited this adoption from being saved:</h2>

  <ul>
    <% @adoption.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
  </ul>
</div>
<% end %>

<div class="field">
  <%= f.label :title %><br>
  <%= f.text_field :title, class: 'form-control' %>
</div>

<div class="field">
  <%= f.label :image %><br>
  <%= f.file_field :image, class: 'form-control' %>
</div>

<div class="field">
  <%= f.label :description %><br>
  <%= f.text_area :description, class: 'form-control', rows: '20' %>
</div>

<div class="field">
  <%= f.label :name %><br>
  <%= f.text_field :name, class: 'form-control' %>
</div>

<div class="field">
  <%= f.label :phone %><br>
  <%= f.text_field :phone, class: 'form-control' %>
</div>

<div class="field">
  <%= f.label :email %><br>
  <%= f.text_field :email, class: 'form-control' %>
</div>

<div class="field">
  <%= f.label :city %><br>
  <%= f.text_field :city, class: 'form-control' %>
</div>

<%= link_to 'Back', adoptions_path, class: 'btn btn-danger pull-right' %>
<%= f.submit "Submit", class: "btn btn-primary pull-right  margin-right" %> 

<% end %>
