<h1>All users</h1>

<table class="table table-striped">
	<tr>
		<th>User name</th>
		<th>Email</th>
		<th>User ID</th>
		<th>Action</th>
	</tr>
  <% @users.each do |user| %>
  	<tr>
	    <td>
	  		<%= link_to user.name, user %>
				
			</td>
			<td>
				<%= user.email %>
			</td>
			<td>
				<%= user.id %>
			</td>
			<td>
				<% if current_user.admin? && !current_user?(user) %>
					<%= link_to 'Delete', user, method: :delete, data: { confirm: 'Are you sure?' } %>
				<% end %>
			</td>
		</tr>			
  <% end %>
</table>