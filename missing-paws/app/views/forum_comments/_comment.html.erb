<% @forum.forum_comments.each do |comment| %>
	<div class="comment clearfix">
		<div class="content">
			<p class="comment_content"><%= comment.comment %></p>
			<p class="comment_author"><%= comment.user.name if comment.user %></p>
			<p><%= comment.id %></p>
			<div class="buttons">	
				<%= link_to "Edit", edit_forum_forum_comment_path(comment.id) %>
				<%= link_to "Delete", [comment.forum, comment], method: :delete, data: { confirm: "Are you sure?" } %>
			</div>
		</div>
	</div>
<% end %> 	

