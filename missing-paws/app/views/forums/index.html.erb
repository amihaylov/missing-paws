<h1>Missing Paws Forum</h1>

<table class='table table-striped'>
  <thead>
    <tr>
      <th>Subject</th>
      <th>Author</th>
      <th>Replies</th>
      <th>Views</th>
      <th>Last Post</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @forums.each do |forum| %>
      <tr>
        <td><%= link_to forum.title, forum %></td>
        <td><%= forum.user.name %></td>
        <td></td>
        <td></td>
        <td><%= time_ago_in_words forum.created_at %></td>
        <td><%= link_to 'Edit', edit_forum_path(forum) %></td>
        <td><%= link_to 'Destroy', forum, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

