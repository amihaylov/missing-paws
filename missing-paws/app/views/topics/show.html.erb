<p id="notice"><%= notice %></p>

<div class="row topic" id="<%= @topic.title %>">
	<h4><%= @topic.title %></h4>
	<div class="col-md-4"><img class="img" src ="<%= @topic.picture %>" alt="Error loading picture" ></div>
	<div class="col-md-4"><%= @topic.text %></div>
	<% if current_user.try(:admin?) %>
		<span><%= link_to 'Edit', edit_topic_path(@topic), class: 'btn btn-warning' %></span>
		<span><%= link_to 'Destroy', @topic, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %></span>
	<% end %>
</div>

<% if current_user.try(:admin?) %>
	<%= link_to 'Edit', edit_topic_path(@topic) %> |
<% end %>
