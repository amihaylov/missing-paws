<p id="notice"><%= notice %></p>

<h1>Petcyclopedia Topics</h1>

<%= form_tag(topics_path, :method => "get", id: "search-form") do %>
  <%= text_field_tag :search, params[:search] %>
  <%= submit_tag "Search", :name => nil %>
<% end %> 

    <% @topics.each do |topic| %>
      <div class="row topic" id="<%= topic.title %>">
        <h4><%= topic.title %></h4>
        <div class="col-md-4"><img class="img" src ="<%= topic.picture %>" alt="Error loading picture" ></div>
        <div class="col-md-4 short-text"><%= topic.text %></div>
        <% if current_user.try(:admin?) %>
          <div><%= link_to 'Show', topic %></div>
          <div><%= link_to 'Edit', edit_topic_path(topic) %></div>
          <div><%= link_to 'Destroy', topic, method: :delete, data: { confirm: 'Are you sure?' } %></div>
        <% end %>
      </div>
    <% end %>
<br>

<% if current_user.try(:admin?) %>
  <%= link_to 'New Topic', new_topic_path %>
<% end %>