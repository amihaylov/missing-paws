<div id="notice"><%= notice %></div>


<h1>
  <%= @article.title %>
</h1>


<article class='article-show'>

  <div class="image-wrapper">
    <%= image_tag(@article.image) %>
  </div>

  <%= @article.content%>

</article>

<% if current_user.try(:admin?) %>
<%= link_to t('.edit-article') || 'Edit', edit_article_path(@article), class: 'btn btn-warning' %>
<% end %>
<%= link_to t('.back') || 'Back', articles_path, class: 'btn btn-danger' %>
